<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoregistrofotoland"
    tools:context=".InicioRegistro.RegistroFoto">

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="274dp"
        android:layout_height="296dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.495"
        tools:srcCompat="@drawable/perfil" />

    <TextView
        android:id="@+id/tFotoPerfil"
        android:layout_width="286dp"
        android:layout_height="37dp"
        android:background="#000000"
        android:fontFamily="@font/monofett"
        android:gravity="center"
        android:text="Foto de Perfil"
        android:textColor="#FF9800"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoPerfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <Button
        android:id="@+id/bTomarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:fontFamily="@font/monofett"
        android:text="Tomar Foto"
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tFotoPerfil"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Tomar Foto" />

    <Button
        android:id="@+id/bContinuar"
        android:layout_width="184dp"
        android:layout_height="46dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/monofett"
        android:text="Continuar"
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.798"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bTomarGaleria"
        app:layout_constraintVertical_bias="0.079"
        tools:text="Continuar" />

    <Button
        android:id="@+id/bTomarGaleria"
        android:layout_width="182dp"
        android:layout_height="72dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/monofett"
        android:text="Tomar de la Galería"
        android:textColor="#FF9800"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.795"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bTomarFoto"
        app:layout_constraintVertical_bias="0.07"
        tools:text="Tomar de la Galería" />
</androidx.constraintlayout.widget.ConstraintLayout>